<div class="container">
  <h1> Recent Links</h1>

  <% if @resumes.present? %>
    <table class="table table-striped table-bordered table-condensed">
      <tr>
        <th>List</th>
      </th>
      <% @resumes.each do |resume| %>
        <tr>
          <td><%= link_to resume.name, resume %></td>
        </tr>
      <%  end %>
    </table>
    <%= paginate @resumes, theme: 'twitter-bootstrap-3'%>
  <% else %>
    <div>
      NO Records Found
    </div>
  <%  end %>
</div>
