<% if languages.present? %>
  <div class='languages container col-md-12 seperator_blue_top'>
      <div class="col-md-3">
        <h3>languages</h3>
      </div>
      <div class="col-md-9 seperator_blue_left">
      <ul class='extra_margin_top'>
        <% languages.each do |language| %>
          <li class="language">
            <span class="inline_highlight"><%= language.title %></span>
              <% if language.proficiency.present?  %>
            <span>
              : <%= language.proficiency.capitalize %>
            </span>
              <% end %>
          </li>
        <% end %>
      </ul>
  </div>
  <% end %>
</div>
