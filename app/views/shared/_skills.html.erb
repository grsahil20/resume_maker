<% if skills.present? %>
  <div class='skills container col-md-12 seperator_blue_top'>
      <div class="col-md-3">
        <h3>Skills</h3>
      </div>
      <div class="col-md-9 seperator_blue_left">
      <ul class='extra_margin_top'>
        <% skills.each do |skill| %>
          <li class="skill">
            <span class="inline_highlight"><%= skill.title %></span>
              <% if skill.exp_level.present?  %>
            <span>
              : <%= skill.exp_level.capitalize %>
            </span>
              <% end %>
          </li>
        <% end %>
      </ul>
  </div>
  <% end %>
</div>
