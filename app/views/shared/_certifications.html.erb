<% if certifications.present? %>
  <div class='certifications container col-md-12 seperator_blue_top'>
      <div class="col-md-3">
        <h3>Certifications</h3>
      </div>
      <div class="col-md-9 seperator_blue_left">
      <ul class='extra_margin_top'>
        <% certifications.each do |certification| %>
          <li class="certification">
            <span class="inline_highlight"><%= certification.title %></span>
              <% if certification.year.present?  %>
            <span>
              (<%= certification.year.capitalize %>)
            </span>
              <% end %>
          </li>
        <% end %>
      </ul>
  </div>
  <% end %>
</div>
